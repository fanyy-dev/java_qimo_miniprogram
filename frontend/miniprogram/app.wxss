/* app.wxss */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

.container {
  padding: 20rpx;
}

/* 通用按钮样式 */
.btn-primary {
  background-color: #ff6b6b;
  color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  text-align: center;
  font-size: 32rpx;
}

.btn-default {
  background-color: #fff;
  color: #333;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  text-align: center;
  font-size: 32rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 列表项样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 图片样式 */
.image-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.tag-primary {
  background-color: #fff3e6;
  color: #ff6b6b;
}

.tag-success {
  background-color: #e6fff2;
  color: #52c41a;
}

/* 文本省略 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 价格样式 */
.price {
  color: #ff6b6b;
  font-weight: bold;
}

.price-symbol {
  font-size: 24rpx;
}

.price-integer {
  font-size: 40rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
