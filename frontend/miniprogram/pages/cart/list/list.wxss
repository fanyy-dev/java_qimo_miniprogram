.container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  position: relative;
}

/* 登录提示 */
.login-prompt {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
  background-color: #fff;
}

.prompt-content {
  text-align: center;
}

.prompt-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.prompt-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.login-btn {
  background-color: #ff6b6b;
  color: #fff;
  border-radius: 40rpx;
  padding: 10rpx 60rpx;
  font-size: 28rpx;
}

.login-btn::after {
  border: none;
}

/* 购物车内容 */
.cart-content {
  padding-bottom: 120rpx;
}

/* 购物车头部 */
.cart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.select-all {
  display: flex;
  align-items: center;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}

.select-all-text {
  font-size: 28rpx;
  color: #333;
}

.clear-cart {
  font-size: 28rpx;
  color: #ff6b6b;
}

/* 购物车列表 */
.cart-list {
  background-color: #fff;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.item-select {
  margin-right: 20rpx;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  min-width: 0;
}

.item-name {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-price {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.quantity-controls {
  display: flex;
  align-items: center;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  background-color: #f8f8f8;
  color: #333;
}

.quantity-btn.minus {
  border-right: 1rpx solid #ddd;
}

.quantity-btn.plus {
  border-left: 1rpx solid #ddd;
}

.quantity-value {
  min-width: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.item-delete {
  margin-left: 20rpx;
  padding: 10rpx;
}

.delete-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 空购物车 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 10rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.go-shopping-btn {
  background-color: #ff6b6b;
  color: #fff;
  border-radius: 40rpx;
  padding: 15rpx 60rpx;
  font-size: 28rpx;
}

.go-shopping-btn::after {
  border: none;
}

/* 结算栏 */
.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 1000;
}

.total-info {
  display: flex;
  align-items: center;
}

.total-text {
  font-size: 28rpx;
  color: #333;
}

.total-price {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.checkout-btn {
  background-color: #ff6b6b;
  color: #fff;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.checkout-btn::after {
  border: none;
}