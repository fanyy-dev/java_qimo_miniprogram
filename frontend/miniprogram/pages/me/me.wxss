.container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 游客模式 */
.guest-mode {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.guest-notice {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

.guest-actions {
  display: flex;
  width: 100%;
  justify-content: space-around;
}

.login-btn {
  background-color: #ff6b6b;
  color: #fff;
  border-radius: 40rpx;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
}

.login-btn-outline {
  background-color: #fff;
  color: #ff6b6b;
  border: 1rpx solid #ff6b6b;
  border-radius: 40rpx;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
}

.guest-btn {
  background-color: #f0f0f0;
  color: #666;
  border-radius: 40rpx;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
}

.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.login-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.avatar-placeholder {
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
}

.login-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.login-actions {
  display: flex;
  flex-direction: column;
  width: 100%;
  gap: 20rpx;
}

/* 用户信息区域 */
.user-info {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
  background-color: #ff6b6b;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.user-details {
  flex: 1;
}

.username-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.member-level {
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.member-level.NORMAL {
  background-color: #999;
}

.member-level.SILVER {
  background-color: #c0c0c0;
}

.member-level.GOLD {
  background-color: #ffd700;
  color: #8a6d3b;
}

.member-level.DIAMOND {
  background: linear-gradient(45deg, #e0e0e0, #b9f6ff, #e0e0e0);
  color: #333;
}

.growth-info {
  display: flex;
  margin-bottom: 10rpx;
}

.growth-value {
  font-size: 28rpx;
  color: #666;
  margin-right: 30rpx;
}

.points {
  font-size: 28rpx;
  color: #ff6b6b;
}

.taste-preference {
  font-size: 26rpx;
  color: #999;
}

.arrow {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-text {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}

.arrow image {
  width: 100%;
  height: 100%;
}

/* 会员权益 */
.member-benefits {
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.benefits-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.benefits-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.benefit-item {
  display: flex;
  align-items: center;
  width: 48%;
  margin-bottom: 15rpx;
}

.benefit-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.benefit-text {
  font-size: 26rpx;
  color: #666;
}

/* 功能菜单区域 */
.menu-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-text {
  font-size: 32rpx;
}

.menu-icon image {
  width: 100%;
  height: 100%;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

/* 订单状态徽章 */
.order-status-badges {
  display: flex;
  gap: 8rpx;
  margin-right: 20rpx;
}

.status-badge {
  min-width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
  font-weight: bold;
}

.status-badge.pending {
  background-color: #ff9500;
}

.status-badge.processing {
  background-color: #007aff;
}

.status-badge.completed {
  background-color: #52c41a;
}

.status-badge.canceled {
  background-color: #999;
}

.menu-badge {
  position: absolute;
  right: 80rpx;
  top: 25rpx;
  background-color: #ff4d4f;
  color: #fff;
  border-radius: 20rpx;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  min-width: 20rpx;
  text-align: center;
}

.menu-arrow {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-arrow .arrow-text {
  font-size: 28rpx;
  color: #999;
}

.menu-arrow image {
  width: 100%;
  height: 100%;
}

/* 退出登录按钮 */
.logout-section {
  padding: 30rpx;
}

.logout-btn {
  width: 100%;
  font-size: 32rpx;
  background-color: #fff;
  border: 2rpx solid #ff4d4f;
  color: #ff4d4f;
}

.logout-btn::after {
  border: none;
}