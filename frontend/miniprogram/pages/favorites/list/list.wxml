<view class="container">
  <!-- 收藏类型筛选 -->
  <view class="type-filter">
    <view class="type-item {{currentType === index ? 'active' : ''}}" wx:for="{{favoriteType}}" wx:key="index" bindtap="onTypeChange" data-index="{{index}}">
      <text class="type-text">{{item}}</text>
    </view>
  </view>

  <!-- 收藏列表 -->
  <view class="favorites-list">
    <view class="favorite-item" wx:for="{{favorites}}" wx:key="id" bindtap="onViewDetail" data-item="{{item}}">
      <image src="{{item.image}}" class="favorite-image"></image>
      <view class="favorite-info">
        <text class="favorite-name">{{item.name}}</text>
        <text class="favorite-subtitle">
          {{item.type === 0 ? item.storeName : '评分：' + item.rating}}
        </text>
        <text class="favorite-detail">
          {{item.type === 0 ? '¥' + item.price : item.address}}
        </text>
        <text class="favorite-time">收藏时间：{{item.createTime}}</text>
      </view>
      <button class="cancel-button" bindtap="onCancelFavorite" data-id="{{item.id}}">
        取消收藏
      </button>
    </view>
  </view>

  <!-- 空收藏提示 -->
  <view class="empty-favorites" wx:if="{{favorites.length === 0 && !loading}}">
    <view class="empty-icon">❤️</view>
    <text class="empty-text">暂无收藏内容</text>
  </view>
</view>