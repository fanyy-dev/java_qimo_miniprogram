.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

/* 类型筛选 */
.type-filter {
  display: flex;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  padding: 10rpx;
}

.type-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 6rpx;
}

.type-item.active {
  background-color: #ff6b6b;
}

.type-item.active .type-text {
  color: #fff;
}

.type-text {
  font-size: 28rpx;
  color: #333;
}

/* 收藏列表 */
.favorites-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.favorite-item {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  align-items: center;
}

.favorite-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.favorite-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.favorite-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.favorite-subtitle {
  font-size: 26rpx;
  color: #666;
}

.favorite-detail {
  font-size: 24rpx;
  color: #999;
}

.favorite-time {
  font-size: 22rpx;
  color: #ccc;
}

.cancel-button {
  background-color: #ff6b6b;
  color: #fff;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
}

/* 空收藏提示 */
.empty-favorites {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}