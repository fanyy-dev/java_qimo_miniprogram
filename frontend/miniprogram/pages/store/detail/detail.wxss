.container {
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 门店图片 */
.store-image-container {
  position: relative;
  width: 100%;
  height: 350rpx;
  overflow: hidden;
}

.store-image {
  width: 100%;
  height: 100%;
}

.store-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: #52c41a;
  color: #fff;
  font-size: 28rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
}

.store-status.closed {
  background-color: #ff4d4f;
}

/* 门店基本信息 */
.info-container {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.store-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.store-rating {
  font-size: 32rpx;
  color: #faad14;
  margin-bottom: 15rpx;
}

.store-type {
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  display: inline-block;
  padding: 4rpx 20rpx;
  border-radius: 18rpx;
  margin-bottom: 15rpx;
}

.store-meta {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.meta-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
  opacity: 0.6;
}

/* 门店描述 */
.description-container {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  border-left: 8rpx solid #ff6b6b;
  padding-left: 15rpx;
}

.description-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  white-space: pre-wrap;
}

/* 门店标签 */
.tags-container {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  background-color: #f0f9ff;
  color: #3b82f6;
  border-radius: 20rpx;
  border: 1rpx solid #bfdbfe;
}

/* 操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
}

.btn-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 8rpx;
}

.action-btn.phone .btn-icon {
  color: #52c41a;
}

.action-btn.navigate .btn-icon {
  color: #1890ff;
}

.action-btn.menu .btn-icon {
  color: #ff6b6b;
}

.action-btn text {
  font-size: 26rpx;
  color: #333;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  font-size: 28rpx;
  color: #999;
}