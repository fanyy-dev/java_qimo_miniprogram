.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

/* 搜索栏 */
.search-container {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 16rpx;
  margin-right: 16rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  height: 64rpx;
  font-size: 28rpx;
  color: #333;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
  line-height: 1;
}

.search-btn {
  width: 120rpx;
  height: 64rpx;
  background-color: #ff6b6b;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 64rpx;
  padding: 0;
  border: none;
}

/* 门店列表 */
.store-list {
  margin-bottom: 40rpx;
}

.store-item {
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.store-image-container {
  position: relative;
  margin-right: 16rpx;
  width: 200rpx;
  height: 160rpx;
}

.store-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.store-status {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background-color: #52c41a;
  color: #fff;
  font-size: 22rpx;
  padding: 2rpx 12rpx;
  border-radius: 12rpx;
}

.store-status.closed {
  background-color: #ff4d4f;
}

.store-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 160rpx;
}

.store-name-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.store-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.store-rating {
  font-size: 28rpx;
  color: #faad14;
  font-weight: 500;
  margin-left: 10rpx;
}

.store-type {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  background-color: #f5f5f5;
  display: inline-block;
  padding: 2rpx 12rpx;
  border-radius: 12rpx;
  align-self: flex-start;
}

.store-address {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.store-meta {
  display: flex;
  flex-wrap: wrap;
  font-size: 22rpx;
  color: #999;
}

.meta-item {
  margin-right: 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 500rpx;
  font-size: 28rpx;
  color: #999;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
  margin-bottom: 20rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  color: #999;
  font-size: 26rpx;
}

/* 上拉加载更多动画 */
.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  color: #999;
  font-size: 26rpx;
}