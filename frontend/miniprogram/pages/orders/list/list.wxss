.container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 订单状态筛选 */
.status-filter {
  display: flex;
  background-color: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  overflow-x: auto;
}

.status-item {
  flex-shrink: 0;
  width: 160rpx;
  text-align: center;
  padding: 15rpx 0;
}

.status-item.active .status-text {
  color: #ff6b6b;
  border-bottom: 2rpx solid #ff6b6b;
}

.status-text {
  font-size: 28rpx;
  color: #333;
  padding-bottom: 5rpx;
}

/* 订单列表 */
.orders-list {
  padding: 20rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-no {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  font-size: 26rpx;
  color: #ff6b6b;
  font-weight: bold;
}

/* 订单商品列表 */
.order-items {
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}

.order-item-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-item-row:last-child {
  margin-bottom: 0;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.item-price {
  font-size: 26rpx;
  color: #ff6b6b;
}

.item-quantity {
  font-size: 26rpx;
  color: #666;
}

/* 订单底部 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-total {
  display: flex;
  align-items: center;
}

.total-text {
  font-size: 26rpx;
  color: #666;
}

.total-price {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
}

/* 空订单提示 */
.empty-orders {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
