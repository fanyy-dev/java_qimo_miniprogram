.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 40rpx 30rpx;
}

.register-form {
  background-color: white;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 50rpx;
}

.input-group {
  margin-bottom: 32rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.input {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.input:focus {
  border-color: #ff6b6b;
}

.code-input {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.send-code-btn {
  flex-shrink: 0;
  width: 200rpx;
  height: 80rpx;
  background-color: #ff6b6b;
  color: white;
  font-size: 24rpx;
  border-radius: 10rpx;
  line-height: 80rpx;
  margin: 0;
}

.send-code-btn:not([disabled]) {
  background-color: #ff6b6b;
}

.send-code-btn[disabled] {
  background-color: #ff9e9e;
}

.password-input {
  display: flex;
  align-items: center;
  position: relative;
}

.toggle-password {
  position: absolute;
  right: 20rpx;
  font-size: 24rpx;
  color: #ff6b6b;
}

.register-btn {
  width: 100%;
  height: 90rpx;
  background-color: #ff6b6b;
  color: white;
  font-size: 32rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.register-btn:not([disabled]) {
  background-color: #ff6b6b;
}

.register-btn[disabled] {
  background-color: #ff9e9e;
}

.login-link {
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

.link {
  color: #ff6b6b;
  margin-left: 10rpx;
}