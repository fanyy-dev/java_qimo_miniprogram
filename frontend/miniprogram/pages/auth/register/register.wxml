<view class="container">
  <view class="register-form">
    <view class="title">用户注册</view>
    
    <view class="input-group">
      <text class="label">手机号</text>
      <input 
        class="input" 
        placeholder="请输入手机号" 
        bindinput="onPhoneInput" 
        type="number"
        maxlength="11"
        value="{{phone}}"
      />
    </view>
    
    <view class="input-group">
      <text class="label">密码</text>
      <view class="password-input">
        <input 
          class="input" 
          placeholder="请设置密码" 
          bindinput="onPasswordInput" 
          password="{{showPassword}}"
          value="{{password}}"
        />
        <text 
          class="toggle-password" 
          bindtap="togglePassword"
        >
          {{showPassword ? '隐藏' : '显示'}}
        </text>
      </view>
    </view>
    
    <view class="input-group">
      <text class="label">确认密码</text>
      <input 
        class="input" 
        placeholder="请再次输入密码" 
        bindinput="onConfirmPasswordInput" 
        password="{{showPassword}}"
        value="{{confirmPassword}}"
      />
    </view>
    
    <button 
      class="register-btn" 
      bindtap="onRegister" 
      disabled="{{!phone || !password || !confirmPassword || password !== confirmPassword}}"
      loading="{{loading}}"
    >
      注册
    </button>
    
    <view class="login-link">
      <text>已有账号？</text>
      <navigator url="/pages/auth/login/login" class="link">立即登录</navigator>
    </view>
  </view>
</view>