.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

/* 状态筛选 */
.status-filter {
  display: flex;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  padding: 10rpx;
}

.status-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 6rpx;
}

.status-item.active {
  background-color: #ff6b6b;
}

.status-item.active .status-text {
  color: #fff;
}

.status-text {
  font-size: 28rpx;
  color: #333;
}

/* 优惠券列表 */
.coupons-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.coupon-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 优惠券头部 */
.coupon-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.coupon-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.coupon-status {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 16rpx;
  background-color: #ff6b6b;
  color: #fff;
}

.coupon-status.used {
  background-color: #ccc;
}

.coupon-status.expired {
  background-color: #999;
}

/* 优惠券内容 */
.coupon-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.coupon-discount {
  display: flex;
  align-items: baseline;
  margin-right: 30rpx;
}

.discount-value {
  font-size: 60rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.discount-unit {
  font-size: 30rpx;
  color: #ff6b6b;
  margin-left: 10rpx;
}

.coupon-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.coupon-type {
  font-size: 28rpx;
  color: #333;
}

.coupon-condition {
  font-size: 24rpx;
  color: #666;
}

.coupon-date {
  font-size: 22rpx;
  color: #999;
}

.coupon-button {
  background-color: #ff6b6b;
  color: #fff;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  margin-left: 30rpx;
}

.coupon-button.disabled {
  background-color: #eee;
  color: #999;
  padding: 20rpx 40rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  margin-left: 30rpx;
  text-align: center;
}

/* 空优惠券提示 */
.empty-coupons {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}