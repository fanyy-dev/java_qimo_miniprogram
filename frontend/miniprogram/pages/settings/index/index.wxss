.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 设置区块 */
.settings-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.section-title {
  display: block;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #999;
  background-color: #fafafa;
  border-bottom: 1rpx solid #eee;
}

/* 设置项 */
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 32rpx;
  color: #333;
}

.setting-value {
  font-size: 28rpx;
  color: #999;
}

.setting-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 开关样式 */
switch {
  transform: scale(0.8);
}