<view class="container">
  <!-- 基本设置 -->
  <view class="settings-section">
    <text class="section-title">基本设置</text>
    <view class="setting-item">
      <text class="setting-label">消息通知</text>
      <switch checked="{{notificationEnabled}}" bindchange="onToggleNotification"></switch>
    </view>
    <view class="setting-item">
      <text class="setting-label">提示声音</text>
      <switch checked="{{soundEnabled}}" bindchange="onToggleSound"></switch>
    </view>
    <view class="setting-item">
      <text class="setting-label">振动反馈</text>
      <switch checked="{{vibrationEnabled}}" bindchange="onToggleVibration"></switch>
    </view>
    <view class="setting-item" bindtap="onClearCache">
      <text class="setting-label">清除缓存</text>
      <view class="setting-value">{{cacheSize}}</view>
    </view>
  </view>

  <!-- 账号与安全 -->
  <view class="settings-section">
    <text class="section-title">账号与安全</text>
    <view class="setting-item" bindtap="onAccountSecurity">
      <text class="setting-label">账号安全</text>
      <text class="setting-arrow">></text>
    </view>
  </view>

  <!-- 关于 -->
  <view class="settings-section">
    <text class="section-title">关于</text>
    <view class="setting-item" bindtap="onPrivacyPolicy">
      <text class="setting-label">隐私政策</text>
      <text class="setting-arrow">></text>
    </view>
    <view class="setting-item" bindtap="onUserAgreement">
      <text class="setting-label">用户协议</text>
      <text class="setting-arrow">></text>
    </view>
    <view class="setting-item" bindtap="onCheckUpdate">
      <text class="setting-label">检查更新</text>
      <text class="setting-arrow">></text>
    </view>
    <view class="setting-item">
      <text class="setting-label">版本号</text>
      <text class="setting-value">{{version}}</text>
    </view>
  </view>
</view>